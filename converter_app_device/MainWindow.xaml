<Window x:Class="converter_app_device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:converter_app_device"
        mc:Ignorable="d"
        Title="Device Configuration" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="RS485 Settings" FontWeight="Bold" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Baud Rate:" Width="100"/>
                <TextBox Name="BaudRateBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Parity:" Width="100"/>
                <TextBox Name="ParityBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Data Bit:" Width="100"/>
                <TextBox Name="DataBitBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Stop Bit:" Width="100"/>
                <TextBox Name="StopBitBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Send RS485" Click="SendRS485_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Read RS485" Click="ReadRS485_Click" Width="100"/>
            </StackPanel>

            <Separator Margin="10"/>

            <TextBlock Text="Device MAC Address:" FontWeight="Bold"/>
            <TextBlock Name="MacAddressText" Margin="0,5"/>
            <Button Content="Get MAC" Click="GetMAC_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
